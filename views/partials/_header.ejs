<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  <% if (user) { %>
    <form class="form-inline" method="POST" action="/logout">
        <div style="margin-right: 20px">Logged in as <%=user['email']%></div>
      </div>
      <button type="submit" class="btn btn-info">Logout</button>
    </form>
    <% } else { %>
      <form method="GET" action="/urls/login %>">
      <button type="submit" class="btn btn-secondary">Sign In</button>
    </form>
    <div style="margin-right: 20px"></div>
      <form method="GET" action="/urls/register %>">
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
   <% } %>
  </nav>
</header>